<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shehandinuka.dimento.User_Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#e0e0e0"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="100dp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/notification"
            android:layout_marginStart="300dp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/notificationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profileName"
            android:layout_toEndOf="@+id/notification"
            android:hint="count"
            android:textColor="#C73232" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:background="@drawable/user"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/userTypeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User Type"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        />
    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phone"
        android:layout_below="@+id/userType"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/phoneString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/userTypeString"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email"
        android:layout_below="@+id/phone"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/emailString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="18dp"
        android:layout_below= "@+id/phoneString"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailString"
        android:layout_centerHorizontal="true"
        android:background="@drawable/model"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:text="DestintGhost 3D model" />

</RelativeLayout>
